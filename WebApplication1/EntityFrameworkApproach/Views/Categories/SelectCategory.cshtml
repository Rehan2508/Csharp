@model IEnumerable<DAL.Models.Category>

@{
    ViewBag.Title = "SelectCategory";
}

<h2>SelectCategory</h2>

@TempData["Message"]

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photoPath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.photoPath)
        </td>
        <td>
            @Html.ActionLink("Choose Category", "SelectedProducts","Products",new { id=item.id },null)
        </td>
    </tr>
}

</table>
